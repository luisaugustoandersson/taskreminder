<?xml version="1.0" encoding="utf-8"?>
<!--Tela de Listagem de Notas -->
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<AbsoluteLayout
	android:id="@+id/frametopo"
	android:layout_width="wrap_content"
	android:layout_height="44dp">
<TextView  
    android:layout_width="174dp"
    android:layout_height="29dp"
    android:text="Lista de Notes"
    android:textSize="20sp"
    android:textStyle="bold"
    android:layout_x="4dp"
    android:layout_y="5dp"
    />
<Button
    android:id="@+id/buttonNovo"
    android:layout_width="60dp"
    android:layout_height="38dp"
    android:text="Novo"
    android:onClick="onClickBtAddNote"
    android:layout_x="240dp"
    android:layout_y="5dp"
    />
</AbsoluteLayout>
<AbsoluteLayout
	android:id="@+id/frametxt"
	android:layout_width="161dp"
	android:layout_height="42dp">
</AbsoluteLayout>
<AbsoluteLayout
	android:id="@+id/framelista"
	android:layout_width="wrap_content"
	android:layout_height="305dp"
	android:layout_marginTop="5dp">
<ListView
	android:id="@+id/listtarefas"
	android:layout_width="305dp"
	android:layout_height="295dp"
	android:drawSelectorOnTop="true"
	android:layout_x="9dp"
	android:layout_y="6dp" />
</AbsoluteLayout>
<AbsoluteLayout
	android:id="@+id/framerodape"
	android:layout_width="wrap_content"
	android:layout_height="29dp"
	android:layout_marginTop="3dp">
<ProgressBar
	android:id="@+id/progresscircle"
	android:layout_width="26dp"
	android:layout_height="20dp"
	android:layout_x="286dp"
	android:layout_y="5dp"
        android:visibility="invisible"/>
</AbsoluteLayout>
</TableLayout>
